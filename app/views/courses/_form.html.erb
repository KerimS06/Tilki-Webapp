<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <%= form_for @course do |f| %>
      <div class="form-inputs">
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :description %>
      <%= f.text_field :description %>
      </div>
      
      <div class="form-actions">
        <%= f.submit "Create course", class: "btn btn-primary" %>
      </div>
      
    <% end %>
  </div>
</div>