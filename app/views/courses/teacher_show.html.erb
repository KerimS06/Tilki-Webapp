<% provide(:title, @course.name) %>

<%= stylesheet_link_tag "sidebar.css" %>
<%= stylesheet_link_tag "sb-admin-2.css" %>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>


<body class="back-im">

<%= render 'teachers/sidebar' %>

<div class="main">

<div class="row">
  <div class="col-lg-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-child fa-5x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @studentCount %></div>
            <div><center>Students enrolled to this course</center></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="panel panel-green">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-file fa-5x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @examCount %></div>
            <div><center>Exams created</center></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-lg-4">
    <div class="panel panel-yellow">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-comments fa-5x"></i>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= @course.name %></div>
              <div><center><%= @course.description %></center></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="mycontent-left">
      <div class="card" style="margin-right:20px; margin-top:20px; background-color:white;">
        <h3 class="card-header"><center>Create Exams!</center></h3>
        <div class="card-block">
          <p class="card-text">You can easily create exams by using the button below</p>
          <%= button_to 'Create Exam', new_course_exam_path(:course_id => @course.id), method: :get, class: 'btn btn-primary'%>
        </div>
      </div>

      <div class="card" style="margin-right:20px; margin-top:20px; background-color:white;">
        <h3 class="card-header"><center>Edit or Delete Course</center></h3>
        <div class="card-block">
          <p class="card-text">You can edit this course's description or delete this course by using the buttons below</p>
          <div class="btn-group">
            <%= button_to 'Edit Course', edit_course_path(@course), method: :get, class: 'btn btn-primary'%>
            <%= button_to 'Delete Course', course_path(@course), method: :delete, class: 'btn btn-primary', data: {confirm: "Are you sure"} %>            
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="mycontent-right">
        <% if @examCount < 1 %>
          <div class="alert alert-danger" style="margin-top:20px;">
            You don't have any created exams. Please create exams for activating Exams section!
          </div>
        <% else %>
          <table id="example" class="display nowrap" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th>Exam Name</th>
                <th>Date</th>
                <th>Show Exam</th>
                <th>Edit Exam</th>
                <th>Delete Exam</th>
              </tr>
            </thead>
          <tbody>
            <% @exams.each do |c| %>
            <tr>
              <td><%= c.name %></td>
              <td><%= c.start_time %></td>
              <td><%= button_to 'Show Exam', course_exam_path(@course), method: :get, class: 'btn btn-primary'%></td>
              <td><%= button_to 'Edit Exam', edit_course_exam_path(@course), method: :get, class: 'btn btn-primary'%></td>
              <td><%= button_to 'Delete Exam', course_exam_path(@course), method: :delete, class: 'btn btn-primary', data: {confirm: "Are you sure?"}%></td>
            </tr>
            <% end %>
          </tbody>
          </table>
        <% end %>

        <br>

        <% if @examCount < 1 %>
          <div class="alert alert-danger" style="margin-top:20px;">
            You don't have any created exams. Please create exams for activating Exam Results section!
          </div>
        <% else %>
          <table id="example2" class="display nowrap" cellspacing="0" width="100%">
            <thead>
              <tr>
                <th>Exam Name</th>
                <th>Upload Exam Result</th>
                <th>Delete Uploaded Results</th>
              </tr>
            </thead>
          <tbody>
            <% @exams.each do |c| %>
            <tr>
              <td><%= c.name %></td>
              <td><%= button_to 'Upload Exam Result', course_exam_path(@course), method: :get, class: 'btn btn-primary'%></td>
              <td><%= button_to 'Delete Exam Result', edit_course_exam_path(@course), method: :get, class: 'btn btn-primary'%></td>
            </tr>
            <% end %>
          </tbody>
          </table>
        <% end %>
        
    </div>
  </div>  
</div>
</div>

</body>

<script>
$(document).ready( function () {
    $('#table').DataTable();
});  
</script>

<script>
$(document).ready( function() {
  $('#example').dataTable( {
    "iDisplayLength": 5,
    "bLengthChange": false
  } );
} )
</script>

<script>
$(document).ready( function() {
  $('#example2').dataTable( {
    "iDisplayLength": 3,
    "bLengthChange": false
  } );
} )
</script>